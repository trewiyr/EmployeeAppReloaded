@{
    ViewData["Title"] = "Welcome";
}
@if (!User.Identity!.IsAuthenticated)
{
    <style>
        body {
            background-color: #2c2d83; /* Navy blue close to purple */
            color: white;
            font-family: Arial, sans-serif;
        }

        .auth-container {
            display: flex;
            justify-content: center;
            gap: 50px;
            padding: 50px;
            min-height: 100vh;
            align-items: center;
        }

        .auth-box {
            background-color: rgba(0, 0, 50, 0.8);
            padding: 30px;
            border-radius: 10px;
            width: 350px;
            box-shadow: 0 0 15px rgba(0,0,0,0.5);
        }

            .auth-box h2 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 0px;
        }

        input.form-control {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: none;
        }

        button.btn-submit {
            width: 100%;
            background-color: #4b0082; /* Indigo/purple */
            border: none;
            padding: 10px;
            color: white;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
        }

            button.btn-submit:hover {
                background-color: #6a0dad;
            }
    </style>
    <div class="min-vh-100 d-flex justify-content-center align-items-center " style="background-color: #2c2d83;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 700px;">
        <div class="card-body text-center">
            <h2 class="mb-4">Welcome</h2>
            <p class="mb-4 text-muted">Please login or register to continue.</p>
            <div class="d-flex justify-content-around">
                <a class="btn btn-primary px-4" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-outline-secondary px-4" asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </div>
    </div>
</div>

}







